// Utility functions for tag taxonomy
export const findTagBySlug = (slug: string): Tag | null => {
  for (const category of tagTaxonomy.categories) {
    const tag = category.tags.find(t => t.slug === slug);
    if (tag) return tag;
  }
  return null;
};

export const findTagsByKeyword = (keyword: string): Tag[] => {
  const results: Tag[] = [];
  const normalizedKeyword = keyword.toLowerCase();
  
  for (const category of tagTaxonomy.categories) {
    for (const tag of category.tags) {
      // Check tag name and synonyms
      if (
        tag.name.toLowerCase().includes(normalizedKeyword) ||
        tag.synonyms.some(s => s.toLowerCase().includes(normalizedKeyword))
      ) {
        results.push(tag);
      }
    }
  }
  
  return results;
};

export const getTagsByCategory = (categorySlug: string): Tag[] => {
  const category = tagTaxonomy.categories.find(c => c.slug === categorySlug);
  return category ? category.tags : [];
};

export const getAllTags = (): Tag[] => {
  return tagTaxonomy.categories.flatMap(category => category.tags);
};

